{
  "name": "directus-desktop-app",
  "version": "1.0.0",
  "description": "Directus Desktop App",
  "main": "./src/main.js",
  "productName": "Directus Desktop App",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "builder": "node ./src/build.js"
  },
  "keywords": [],
  "author": "rootdm",
  "license": "MIT",
  "build": {
    "appId": "com.directus.app",
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./images/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "./images/icon.ico",
      "uninstallerIcon": "./images/icon.ico",
      "uninstallDisplayName": "Uninstall Directus Desktop",
      "license": "license.md",
      "allowToChangeInstallationDirectory": false
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      ".env",
      "license.md",
      "images/**/*",
      "src/**/*"
    ]
  },
  "dependencies": {
    "@electron/fuses": "^1.8.0",
    "aws-sdk": "^2.1691.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "electron-packager": "^17.1.2",
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5"
  }
}
